model User {
  id                    Int @id @default(autoincrement())
  username              String
  password              String
  role                  String
  director              Director[]
  superadmin            SuperAdmin[]
  coordinator           Coordinator[]
  teacher               Teacher[]
  trainer               Trainer[]
  student               Student[]
}



model SuperAdmin {
  id                    Int @id @default(autoincrement())
  firstname             String
  middlename            String?
  lastname              String
  email                 String
  contact               String
  profile               String?
  profile_url           String?
  accountStatus         Int
  user_id               Int
  user                  User @relation(fields: [user_id], references: [id])
  
}


model Director {
  id                    Int @id @default(autoincrement())
  firstname             String
  middlename            String?
  lastname              String
  email                 String
  contact               String
  profile               String?
  profile_url           String?
  accountStatus         Int
  user_id               Int
  user                  User @relation(fields: [user_id], references: [id])
  company               Company[]  
  notification Notification[] 
}

model Coordinator {
  id                    Int @id @default(autoincrement())
  firstname             String
  middlename            String?
  lastname              String
  email                 String
  contact               String
  campus                String
  college               String
  program               String
  profile               String?
   profile_url           String?
  accountStatus         Int
  user_id               Int
  user                  User @relation(fields: [user_id], references: [id])
  teacher               Teacher[]
  notification Notification[]
  announcement    Announcement[]
}

model Teacher {
  id                    Int @id @default(autoincrement())
  firstname             String
  middlename            String?
  lastname              String
  email                 String
  contact               String
  campus                String
  college               String
  program               String
  major                 String
  profile               String?
  profile_url           String?
  accountStatus         Int
  user_id               Int
  coordinator_id        Int
  user                  User @relation(fields: [user_id], references: [id])
  coordinator           Coordinator @relation(fields: [coordinator_id], references: [id])
  student               Student[]
  dateRangeTimesheet    DateRangeTimesheet[]
  notification Notification[]
  announcement    Announcement[]
}

model Trainer {
  id                    Int @id @default(autoincrement())
  firstname             String
  middlename            String?
  lastname              String
  email                 String
  contact               String
  profile               String?
  profile_url           String?
  accountStatus         Int
  areaAssign_id         Int
  user_id               Int
  areaofAssignment      AreaOfAssignment @relation(fields: [areaAssign_id], references: [id])
  user                  User @relation(fields: [user_id], references: [id])
  student               Student[]
  notification Notification[]
  announcement    Announcement[]
}

model Student {
  id                    Int @id @default(autoincrement())
  firstname             String
  middlename            String?
  lastname              String
  email                 String
  contact               String
  address               String
  gender                String
  campus                String
  college               String
  program               String
  major                 String
  section               String?
  accountStatus         Int
  profile               String?
  profile_url           String?
  deletedStatus         Int
  createAt              String?
  areaAssigned_id       Int?
  trainer_id            Int?
  teacher_id            Int
  user_id               Int
  teacher               Teacher  @relation(fields: [teacher_id], references: [id])
  trainer               Trainer?  @relation(fields: [trainer_id], references: [id])
  AreaOfAssignment      AreaOfAssignment?  @relation(fields: [areaAssigned_id], references: [id])
  user                  User      @relation(fields: [user_id], references: [id])
  timesheet             Timesheet[]
  task                  Task[]
  requirement           Requirement[]
  weeklyReport          WeeklyReport[]
  notification Notification[]
  announcement Announcement[]
}

model Timesheet {
  id                    Int      @id @default(autoincrement())
  timeIn                String
  timeOut               String
  totalHours            Float
  date                  String
  week                  Int
  logStatus             Int
  studentMark           Int?
  teacherMark           Int?
  trainerMark           Int?
  dateSubmitted         String?
  student_id            Int
  student               Student  @relation(fields: [student_id], references: [id])
}

model Task {
  id Int @id @default(autoincrement())
  description           String
  date                  String
  taskImage             String?
  tasImageUrl           String?
  student_id            Int
  student               Student @relation(fields: [student_id], references: [id])
}

model Requirement {
  id Int @id @default(autoincrement())
  type                  String
  image                 String        
  imageUrl              String
  student_id            Int
  student               Student @relation(fields: [student_id], references: [id])
}



model Company {
  id                    Int @id @default(autoincrement())
  companyName           String
  address               String
  email                 String
  contact               String
  moaUpload             String
  moaUrl                String?
  profile               String?
  director_id           Int
  director              Director @relation(fields: [director_id], references: [id])
  areaOfAssignment      AreaOfAssignment[]  
}

model AreaOfAssignment {
  id                    Int @id @default(autoincrement())
  areaName              String
  slot                  Int
  company_id            Int
  company               Company @relation(fields: [company_id], references: [id])
  student               Student[]
  trainer               Trainer[]
}


model DateRangeTimesheet {
  id                    Int @id @default(autoincrement())
  start_date            String
  end_date              String
  teacher_id            Int
  teacher               Teacher @relation(fields: [teacher_id], references: [id])
}



model Campus {
  id Int @id @default(autoincrement())
  campus_Location       String
  college College[]
}

model College {
  id Int @id @default(autoincrement())
  college_description  String
  campus_id            Int
  campus Campus        @relation(fields: [campus_id], references: [id])
  program              Program[]
}

model Program {
  id Int @id @default(autoincrement())
  program_description  String
  college_id           Int
  trainingHours        Int?
  college College      @relation(fields: [college_id], references: [id])  
  major                Major[]            
}

model Major {
  id Int @id @default(autoincrement())
  major_description    String
  program_id           Int
  program Program      @relation(fields: [program_id], references: [id])
}


model Announcement {
  id Int @id @default(autoincrement())
  title                String
  description          String
  postedBy             String
  coordinator_id       Int?
  teacher_id           Int?
  trainer_id           Int?
  date                 String
  student_id           Int
  coordinator Coordinator? @relation(fields: [coordinator_id], references: [id])
  teacher Teacher? @relation(fields: [teacher_id], references: [id])
  trainer Trainer? @relation(fields: [trainer_id], references: [id])
  student Student @relation(fields: [student_id], references: [id])
}


model WeeklyReport {
  id Int @id @default(autoincrement())
  date                String
  student_id          Int
  student Student     @relation(fields: [student_id], references: [id])
}


model Notification {
  id Int @id @default(autoincrement())
  description String
  title String?
  date String
  director_id Int?
  coordinator_id Int?
  teacher_id Int?
  trainer_id Int?
  student_id Int?
  director Director ?@relation(fields: [director_id], references: [id])
  coordinator Coordinator ?@relation(fields: [coordinator_id], references: [id])
  teacher Teacher ?@relation(fields: [teacher_id], references: [id])
  trainer Trainer ?@relation(fields: [trainer_id], references: [id])
  student Student ?@relation(fields: [student_id], references: [id])
}